<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="product"
            type="id.ac.ui.cs.mobileprogramming.shafira_ishlah.anvie.models.Product" />

        <variable
            name="shopInterface"
            type="id.ac.ui.cs.mobileprogramming.shafira_ishlah.anvie.adapters.ShopListAdapter.ShopInterface" />
    </data>

    <LinearLayout
        android:paddingTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:onClick="@{()-> shopInterface.onItemClick(product)}">


        <ImageView
            android:id="@+id/productImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/aladdin"
            android:productImage="@{product.imageUrl}"
            />

        <TextView
            android:id="@+id/productNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{product.name}"
            android:layout_gravity="center"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

        <TextView
            android:id="@+id/priceTextView"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(product.price)+` $`}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />

        <TextView
            android:id="@+id/availableTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@{product.available ? @string/available : @string/out_of_stock}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"

            android:textColor="@{product.available ? @color/colorPrimary : @color/red}" />


        <Button
            android:id="@+id/addToCartButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_to_cart"
            android:layout_gravity="center"
            android:enabled="@{product.available}"

            android:onClick="@{() -> shopInterface.addItem(product)}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"/>

    </LinearLayout>
</layout>